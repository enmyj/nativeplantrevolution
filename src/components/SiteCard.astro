---
interface Props {
  title: string;
  address: string;
  description: string;
  image: string;
  slug: string;
}

const { title, address, description, image, slug } = Astro.props;
---

<a href={`/sites/${slug}`} class="site-card">
  <div class="image-container">
    <img src={image} alt={title} loading="lazy" />
  </div>
  <div class="content">
    <h2>{title}</h2>
    <p class="address">üìç {address}</p>
    <p class="description">{description}</p>
  </div>
</a>

<style>
  .site-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .site-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px var(--color-card-shadow);
  }

  .image-container {
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--color-border);
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .site-card:hover img {
    transform: scale(1.05);
  }

  .content {
    padding: 1.25rem;
  }

  h2 {
    font-size: 1.25rem;
    margin: 0 0 0.5rem;
  }

  .site-card:hover h2 {
    color: var(--color-accent);
  }

  .address {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0 0 0.75rem;
  }

  .description {
    color: var(--color-text);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
